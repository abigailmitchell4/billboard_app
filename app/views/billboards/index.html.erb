<div class="ui center aligned header">
<br/>
  <h1 class="ui huge header">B I L L B O A R D S</h1>
</div>

<div class="ui center aligned header">
  <h1 class="ui medium header">Choose a Billboard Below</p>
</div>

<br/>
<div class="ui center aligned header">
  <%= link_to "New billboard", new_billboard_path, class: "ui color3 button" %>
</div>

<br/>
<br/>
<hr/>
<br/>

<div class="ui grid">
 <% @billboards.each do |billboard| %>
    <div class="sixteen wide mobile eight wide tablet four wide computer column">
      <div class="ui card"> 
        <div class="ui inverted segment"> 
          <div class="content">
            <div class="ui inverted segment"> 
              <div class="ui center aligned header">
                <%= link_to billboard.name, billboard, class: "ui white inverted header" %>
              </div>
            </div>
          </div>
        </div>
        <div class="content">
          <div class="ui small vertical two buttons">
            <button class="ui basic button">
              <%= link_to 'Edit', edit_billboard_path(billboard), class: "ui color7 button" %>
            </button>
            <button class="ui basic button">
              <%= link_to 'Delete', billboard, method: :delete, data: { confirm: 'Are you sure?' }, class: "ui color6 button" %>
            </button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>