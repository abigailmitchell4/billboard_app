<%= form_with(model: [ :artist, @song ], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, placeholder: "Song Title" %>
  </div>
  <div class="field">
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name, required: true, placeholder: "Artist" %>
  </div>
  <div class="field">
    <%= f.label :album %>
    <%= f.text_field :album, required: true, placeholder: "Album Title" %>
  </div>
  <div class="field">
    <%= f.label :rating %>
    <%= f.text_field :rating, required: true, placeholder: "Rating" %>
  </div>
  <div class="field">
    <%= f.label :country %>
    <%= f.text_field :country, required: true, placeholder: "Rating" %>
  </div>
   <%= f.submit class: "ui color3 button" %>

<% end %>
